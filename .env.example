# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_ACCESS_TOKEN=your_supabase_access_token
SUPABASE_DATABASE_PASSWORD=your_database_password

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SIGNING_SECRET=whsec_your_webhook_signing_secret

# Video Generation APIs
VEO_USE_REAL_API=false
QINGYUN_API_KEY=your_qingyun_api_key
QINGYUN_API_ENDPOINT=https://api.qingyuntop.top

# APICore Configuration
VITE_APICORE_API_KEY=your_apicore_api_key
VITE_APICORE_ENDPOINT=https://api.apicore.ai

# APICore SEO Dedicated API Key (optional - for SEO content generation)
VITE_APICORE_SEO_API_KEY=your_seo_dedicated_api_key

# ImgBB API (for image uploads)
VITE_IMGBB_API_KEY=your_imgbb_api_key

# Cloudflare R2 Storage Configuration
VITE_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
VITE_CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
VITE_CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
VITE_CLOUDFLARE_R2_BUCKET_NAME=ai-video-storage
VITE_CLOUDFLARE_R2_PUBLIC_DOMAIN=your_custom_domain.com

# Application Settings
VITE_APP_URL=http://localhost:5173
NODE_ENV=development

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Database URLs (for direct connections if needed)
DATABASE_URL=postgresql://username:password@host:port/database

# Security Configuration (REQUIRED for security features)
# Generate these with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
VITE_COOKIE_ENCRYPTION_KEY=your-32-character-encryption-key-here
VITE_COOKIE_SIGNATURE_SECRET=your-signature-secret-here

# Security Monitoring (Optional)
VITE_SECURITY_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
VITE_SECURITY_EMAIL=security@yourcompany.com

# Redis Configuration (Optional - for enhanced rate limiting)
REDIS_URL=redis://localhost:6379

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google OAuth Configuration (for One Tap Login)
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com

# Video API Primary Provider
VITE_PRIMARY_VIDEO_API=qingyun

# Cloudinary Configuration (用于后端自动生成缩略图)
# 注册地址: https://cloudinary.com (免费套餐 25GB/月)
# ⚠️ 必需: Cloud name（从 Dashboard -> Account Details 获取）
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# 可选: API Key 和 Secret（仅在需要更稳定服务时配置）
# 如果不配置 → 使用 Fetch API（无需认证，适合公开视频，完全免费）
# 如果配置 → 使用 Upload API（需要认证，更稳定，有配额保障）
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# Template Thumbnail Cache Configuration
# 设置为 'true' 可禁用模版缩略图的本地缓存，每次都从服务器获取
# 主要用于开发调试和问题排查，生产环境建议保持 'false'
VITE_DISABLE_TEMPLATE_THUMBNAIL_CACHE=false

# Thumbnail Generation Configuration
# 前端缩略图生成开关
# true = 前端生成并上传缩略图（传统方式，需要浏览器处理视频）
# false = 完全依赖后端自动生成（推荐，通过数据库触发器 + Edge Function）
# 注意：后端自动生成使用 Cloudflare Media Transformations，无需额外配置
VITE_ENABLE_FRONTEND_THUMBNAIL=false