# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SIGNING_SECRET=whsec_your_webhook_signing_secret

# Video Generation APIs
VEO_USE_REAL_API=false
QINGYUN_API_KEY=your_qingyun_api_key
QINGYUN_API_ENDPOINT=https://api.qingyuntop.top

# ImgBB API (for image uploads)
VITE_IMGBB_API_KEY=your_imgbb_api_key

# Cloudflare R2 Storage Configuration
VITE_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
VITE_CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
VITE_CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
VITE_CLOUDFLARE_R2_BUCKET_NAME=ai-video-storage
VITE_CLOUDFLARE_R2_PUBLIC_DOMAIN=your_custom_domain.com

# Application Settings
VITE_APP_URL=http://localhost:5173
NODE_ENV=development

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Database URLs (for direct connections if needed)
DATABASE_URL=postgresql://username:password@host:port/database

# Security Configuration (REQUIRED for security features)
# Generate these with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
VITE_COOKIE_ENCRYPTION_KEY=your-32-character-encryption-key-here
VITE_COOKIE_SIGNATURE_SECRET=your-signature-secret-here

# Security Monitoring (Optional)
VITE_SECURITY_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
VITE_SECURITY_EMAIL=security@yourcompany.com

# Redis Configuration (Optional - for enhanced rate limiting)
REDIS_URL=redis://localhost:6379

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Video API Primary Provider
VITE_PRIMARY_VIDEO_API=qingyun

# Template Thumbnail Cache Configuration
# 设置为 'true' 可禁用模版缩略图的本地缓存，每次都从服务器获取
# 主要用于开发调试和问题排查，生产环境建议保持 'false'
VITE_DISABLE_TEMPLATE_THUMBNAIL_CACHE=false